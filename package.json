{
	"name": "vscode-custom-word-motions",
	"displayName": "Custom Word Motions",
	"description": "Highly customizable word by word cursor motions using regex's.",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.44.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onCommand:vscode-custom-word-motions.moveby"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "vscode-custom-word-motions.moveby",
				"title": "Move cursor by a given custom unit"
			}
		],
		"configuration": {
			"title": "Custom Word Motion Definitions",
			"properties": {
				"vscode-custom-word-motions.units": {
					"type": "array",
					"default": [
						{"name": "WORD", "regex": "[^\\s]+"},
						{"name": "word", "regex": "[_\\p{L}][_\\p{L}0-9]+"},
						{"name": "subword", "regex": "((\\p{L})[0-9,\\p{Ll}]+|\\p{Lu}+|[^\\p{L}\\s]+)"},
						{"name": "space", "regex": "\\s+"},
						{"name": "punctuation", "regex": "[^\\p{L}\\s]+"}
					],
					"description": "Defines a set of named regular expressions to move the cursor by"
				}
			}
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"lint": "eslint src --ext ts ",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/vscode": "^1.44.0",
		"@types/glob": "^7.1.1",
		"@types/mocha": "^7.0.2",
		"@types/node": "^13.11.0",
		"eslint": "^6.8.0",
		"@typescript-eslint/parser": "^2.26.0",
		"@typescript-eslint/eslint-plugin": "^2.26.0",
		"glob": "^7.1.6",
		"mocha": "^7.1.1",
		"typescript": "^3.8.3",
		"vscode-test": "^1.3.0"
	}
}
